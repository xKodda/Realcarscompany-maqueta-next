generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // Uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // Uses direct connection
}

enum AutoEstado {
  disponible
  vendido
  reservado
}

enum AdminRol {
  SUPERADMIN
}



model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  passwordHash String
  role         String    @default("admin")
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  vehicles     Auto[]    @relation("UserVehicles")
}

model Auto {
  id              String        @id @default(cuid())
  slug            String        @unique
  marca           String
  modelo          String
  anio            Int
  precio          Int
  kilometraje     Int
  transmision     String
  combustible     String
  litrosMotor     String?
  color           String

  imagen          String?
  descripcion     String
  caracteristicas String[]      @default([])
  estado          AutoEstado    @default(disponible)
  destacado       Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  

  // Relations
  createdById      Int?
  createdBy        User?         @relation("UserVehicles", fields: [createdById], references: [id])
  
  // Vehicle images
  vehicleImages    VehicleImage[]
}

model VehicleImage {
  id        Int      @id @default(autoincrement())
  imageUrl  String
  position  Int      @default(0)
  createdAt DateTime @default(now())
  
  vehicleId String
  vehicle   Auto     @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
}

// Keep AdminUser for backward compatibility, but use User for new auth
model AdminUser {
  id           String    @id @default(cuid())
  nombre       String
  email        String    @unique
  passwordHash String
  role         AdminRol  @default(SUPERADMIN)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}


