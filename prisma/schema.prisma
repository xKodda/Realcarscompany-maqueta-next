generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // Uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // Uses direct connection
}

enum AutoEstado {
  disponible
  vendido
  reservado
}

enum AdminRol {
  SUPERADMIN
}

enum OrdenEstado {
  pendiente
  pagado
  expirado
  cancelado
}

enum TicketEstado {
  activo
  usado
  ganador
}

enum PagoEstado {
  pending
  verified
  done
  expired
  cancelled
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  passwordHash String
  role         String    @default("admin")
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  vehicles     Auto[]    @relation("UserVehicles")
}

model Auto {
  id              String        @id @default(cuid())
  slug            String        @unique
  marca           String
  modelo          String
  anio            Int
  precio          Int
  kilometraje     Int
  transmision     String
  combustible     String
  litrosMotor     String?
  color           String


  descripcion     String
  caracteristicas String[]      @default([])
  estado          AutoEstado    @default(disponible)
  destacado       Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  

  // Relations
  createdById      Int?
  createdBy        User?         @relation("UserVehicles", fields: [createdById], references: [id])
  
  // Vehicle images
  vehicleImages    VehicleImage[]
}

model VehicleImage {
  id        Int      @id @default(autoincrement())
  imageUrl  String
  position  Int      @default(0)
  createdAt DateTime @default(now())
  
  vehicleId String
  vehicle   Auto     @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
}

// Keep AdminUser for backward compatibility, but use User for new auth
model AdminUser {
  id           String    @id @default(cuid())
  nombre       String
  email        String    @unique
  passwordHash String
  role         AdminRol  @default(SUPERADMIN)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model OrdenCompra {
  id                        String               @id @default(cuid())
  sorteoId                  String?
  sorteoTitulo              String?
  cantidad                  Int
  total                     Int
  precioUnitario            Int
  currency                  String               @default("CLP")
  compradorNombre           String
  compradorEmail            String
  compradorTelefono         String
  compradorRut              String?
  estado                    OrdenEstado          @default(pendiente)
  fechaPago                 DateTime?
  createdAt                 DateTime             @default(now())
  updatedAt                 DateTime             @updatedAt
  tickets                   TicketSorteo[]
  flowTransactions          FlowTransaction[]
}

model TicketSorteo {
  id           String       @id @default(cuid())
  numero       String       @unique
  sorteoId     String
  comprador    String
  estado       TicketEstado @default(activo)
  fechaCompra  DateTime     @default(now())
  orden        OrdenCompra  @relation(fields: [ordenId], references: [id], onDelete: Cascade)
  ordenId      String
}


model FlowTransaction {
  id              String      @id @default(cuid())
  token           String      @unique // Token entregado por Flow
  flowOrder       Int?        // NÃºmero de orden de Flow (se obtiene al confirmar)
  commerceOrder   String      // Nuestro ID de OrdenCompra
  
  status          Int         @default(1) // 1: Pendiente, 2: Pagada, 3: Rechazada, 4: Anulada
  amount          Int
  subject         String
  payerEmail      String?
  
  paymentMethod   String?     // webpay, servipag, oneclick, etc
  paymentDate     DateTime?   // Fecha real del pago
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  orden           OrdenCompra @relation(fields: [commerceOrder], references: [id], onDelete: Cascade)
}

// CRM Models
model Client {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  interactions Interaction[]
}

model Interaction {
  id        String   @id @default(cuid())
  type      String   // 'general', 'consignacion', 'auto', 'sorteo'
  status    String   @default("new") // 'new', 'contacted', 'closed', 'archived'
  subject   String?
  content   String   // The message content
  metadata  Json?    // For storing extra data like vehicleId, images, etc.
  
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
